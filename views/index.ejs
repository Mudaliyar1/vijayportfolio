      <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">What Users Say</h2>
      <a href="/reviews" class="px-4 py-2 bg-dark-200 rounded-md hover:bg-dark-300 transition-colors flex items-center">
        <span>All Reviews</span>
        <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% if (topReviews && topReviews.length > 0) { %>
        <% topReviews.forEach(review => { %>
          <div class="bg-dark-100 p-6 rounded-lg border border-gray-800 hover:border-neon-blue transition-colors">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center">
                <% if (review.userId) { %>
                  <div class="w-10 h-10 rounded-full overflow-hidden mr-3">
                    <img
                      src="<%= review.userId.profilePicture || '/images/default-avatar.png' %>"
                      alt="<%= review.userId.username %>"
                      class="w-full h-full object-cover"
                    >
                  </div>
                  <div>
                    <p class="font-medium"><%= review.userId.username %></p>
                    <p class="text-xs text-gray-500"><%= new Date(review.createdAt).toLocaleDateString() %></p>
                  </div>
                <% } else { %>
                  <div class="w-10 h-10 rounded-full bg-gradient-to-r from-neon-green to-neon-blue flex items-center justify-center mr-3">
                    <i class="fas fa-user text-white"></i>
                  </div>
                  <div>
                    <p class="font-medium">Guest User</p>
                    <p class="text-xs text-gray-500"><%= new Date(review.createdAt).toLocaleDateString() %></p>
                  </div>
                <% } %>
              </div>

              <div class="flex">
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="fas fa-star <%= i <= review.rating ? 'text-yellow-500' : 'text-gray-600' %> mr-1"></i>
                <% } %>
              </div>
            </div>

            <p class="text-gray-300 italic">"<%= review.comment %>"</p>
          </div>
        <% }); %>
      <% } else { %>
        <div class="bg-dark-100 p-6 rounded-lg border border-gray-800">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-full bg-gradient-to-r from-neon-blue to-neon-purple flex items-center justify-center mr-3">
              <span class="text-white font-bold">A</span>
            </div>
            <div>
              <h4 class="font-medium">Alex Johnson</h4>
              <p class="text-gray-500 text-sm">Software Developer</p>
            </div>
          </div>
          <p class="text-gray-300 italic">"FTRAISE AI has become my go-to assistant for coding questions and brainstorming. The multilingual support is impressive, and the responses are always helpful and accurate."</p>
