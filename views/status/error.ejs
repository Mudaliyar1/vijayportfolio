<%
// Helper function to get the main site URL
function getMainSiteUrl() {
  if (process.env.NODE_ENV === 'production') {
    return process.env.BASE_URL || `https://${process.env.RENDER_EXTERNAL_HOSTNAME || 'ftraiseai.onrender.com'}`;
  } else {
    return `http://localhost:${process.env.PORT || 3000}`;
  }
}
%>
<!-- Status Page Error -->
<div class="container mx-auto px-4 py-8 max-w-6xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">
      <%= title %>
    </h1>
    <p class="text-gray-400"><%= message %></p>
  </div>

  <div class="bg-dark-200 rounded-lg border border-gray-700 shadow-xl overflow-hidden p-6">
    <div class="flex items-center mb-4">
      <div class="text-2xl mr-3 text-red-500">
        <i class="fas fa-exclamation-circle"></i>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-white">Error Encountered</h2>
        <p class="text-gray-400 text-sm">The status page encountered an error</p>
      </div>
    </div>

    <p class="text-gray-400 mb-4">
      We apologize for the inconvenience. Please try again later or contact support if the problem persists.
    </p>

    <div class="mt-4">
      <a href="/status" class="px-4 py-2 bg-neon-blue text-white rounded-md hover:bg-blue-600 transition-colors">
        <i class="fas fa-home mr-2"></i> Go to Status Home
      </a>
      <a href="<%= getMainSiteUrl() %>/" class="ml-2 px-4 py-2 bg-dark-300 text-white rounded-md hover:bg-dark-100 transition-colors">
        <i class="fas fa-arrow-left mr-2"></i> Back to Main Site
      </a>
    </div>
  </div>
</div>
