<%
// Set default path if not provided
if (typeof path === 'undefined') {
  path = '/websites';
}
%>
<!-- Hamburger Menu Toggle Button -->
<button id="sidebar-toggle" class="fixed z-50 top-20 left-4 w-10 h-10 flex items-center justify-center bg-gradient-to-r from-neon-blue to-neon-purple text-white rounded-full shadow-lg hover:shadow-xl transition-all duration-300">
  <i class="fas fa-bars"></i>
</button>

<div id="sidebar" class="w-64 bg-dark-200 border-r border-gray-800 block shadow-xl fixed left-0 z-40 transition-all duration-300 transform -translate-x-full" style="top: 64px; height: calc(100vh - 64px);">
  <div class="p-6 border-b border-gray-800 bg-gradient-to-r from-dark-100 to-dark-200 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">FTRAISE AI</span>
    </a>
    <button id="sidebar-close" class="text-gray-400 hover:text-white">
      <i class="fas fa-times text-lg"></i>
    </button>
  </div>

  <div class="py-4">
    <div class="px-6 mb-4">
      <h3 class="text-xs uppercase text-gray-500 font-semibold tracking-wider">Website Builder</h3>
    </div>

    <nav>
      <ul>
        <!-- Dashboard -->
        <li>
          <a href="/websites" class="flex items-center py-2 px-4 rounded-md <%= path === '/websites' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-tachometer-alt w-5"></i>
            <span class="ml-3">Dashboard</span>
          </a>
        </li>

        <!-- Create Website -->
        <li>
          <a href="/websites/create" class="flex items-center py-2 px-4 rounded-md <%= path === '/websites/create' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-plus w-5"></i>
            <span class="ml-3">Create Website</span>
          </a>
        </li>

        <!-- My Websites -->
        <li>
          <a href="/websites/dashboard" class="flex items-center py-2 px-4 rounded-md <%= path === '/websites/dashboard' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-globe w-5"></i>
            <span class="ml-3">My Websites</span>
          </a>
        </li>

        <!-- Unpublished Websites -->
        <li>
          <a href="/websites/unpublished" class="flex items-center py-2 px-4 rounded-md <%= path === '/websites/unpublished' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-file-alt w-5"></i>
            <span class="ml-3">Unpublished Sites</span>
          </a>
        </li>

        <!-- Template Marketplace -->
        <li>
          <a href="/template-marketplace" class="flex items-center py-2 px-4 rounded-md <%= path === '/template-marketplace' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-store w-5"></i>
            <span class="ml-3">Template Marketplace</span>
          </a>
        </li>

        <!-- Website Analytics -->
        <li>
          <a href="/website-analytics" class="flex items-center py-2 px-4 rounded-md <%= path === '/website-analytics' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-chart-line w-5"></i>
            <span class="ml-3">Website Analytics</span>
          </a>
        </li>

        <!-- Buy Package -->
        <li>
          <a href="/buy-package" class="flex items-center py-2 px-4 rounded-md <%= path === '/buy-package' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-shopping-cart w-5"></i>
            <span class="ml-3">Buy Package</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<!-- Sidebar Overlay -->
<div id="sidebar-overlay" class="fixed bg-black bg-opacity-50 z-30 hidden transition-opacity duration-300 ease-in-out" style="top: 64px; left: 0; right: 0; bottom: 0;"></div>
