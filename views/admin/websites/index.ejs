<div class="container mx-auto px-4 py-8 bg-gray-900">
  <h1 class="text-3xl font-bold mb-8 text-white">Manage Websites</h1>

  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8 text-black">
    <div class="bg-gradient-to-r from-purple-500 to-indigo-600 p-6 text-white">
      <h2 class="text-2xl font-bold">All Websites</h2>
      <p class="mt-1 opacity-90">Manage user-created websites</p>
    </div>

    <div class="p-6">
      <% if (websites.length === 0) { %>
        <div class="text-center py-8">
          <svg class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <h3 class="text-xl font-bold text-gray-700 mb-2">No Websites Found</h3>
          <p class="text-gray-600">No websites have been created by users yet.</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white">
            <thead>
              <tr class="bg-gray-100 text-gray-700">
                <th class="py-3 px-4 text-left">Title</th>
                <th class="py-3 px-4 text-left">User</th>
                <th class="py-3 px-4 text-left">Package</th>
                <th class="py-3 px-4 text-left">Status</th>
                <th class="py-3 px-4 text-left">Created</th>
                <th class="py-3 px-4 text-left">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% websites.forEach(website => { %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-4 font-medium"><%= website.title %></td>
                  <td class="py-3 px-4"><%= website.user.username %></td>
                  <td class="py-3 px-4"><%= website.package.name %></td>
                  <td class="py-3 px-4">
                    <span class="inline-block px-2 py-1 text-xs rounded-full <%= website.isPublished ? 'bg-green-200 text-green-800' : 'bg-yellow-200 text-yellow-800' %>">
                      <%= website.isPublished ? 'Published' : 'Draft' %>
                    </span>
                  </td>
                  <td class="py-3 px-4"><%= new Date(website.createdAt).toLocaleDateString() %></td>
                  <td class="py-3 px-4">
                    <div class="flex space-x-2">
                      <a href="/admin/websites/<%= website._id %>" class="text-blue-600 hover:text-blue-800">
                        View
                      </a>
                      <form action="/admin/websites/<%= website._id %>/toggle-status" method="POST" class="inline">
                        <button type="submit" class="text-purple-600 hover:text-purple-800">
                          <%= website.isPublished ? 'Unpublish' : 'Publish' %>
                        </button>
                      </form>
                      <form action="/admin/websites/<%= website._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this website?');">
                        <button type="submit" class="text-red-600 hover:text-red-800">
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>
