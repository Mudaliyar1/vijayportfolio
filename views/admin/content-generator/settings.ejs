<!-- Admin Content Generator Settings -->
<div class="flex flex-col md:flex-row">
  <div class="flex-grow p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Content Generator Settings</h1>
      <a href="/admin/content-generator" class="bg-dark-200 hover:bg-dark-300 text-gray-300 px-3 py-2 rounded-md text-sm transition-colors">
        <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
      </a>
    </div>

    <!-- Settings Form -->
    <div class="bg-dark-100 rounded-lg border border-gray-800 overflow-hidden">
      <div class="p-4 border-b border-gray-700">
        <h2 class="text-lg font-semibold">General Settings</h2>
        <p class="text-sm text-gray-400">Configure the AI content generator parameters</p>
      </div>

      <form action="/admin/content-generator/settings" method="POST" class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-md font-semibold mb-4">AI Model Settings</h3>
            
            <div class="mb-4">
              <label for="defaultModel" class="block text-gray-300 mb-1">Default AI Model</label>
              <select id="defaultModel" name="defaultModel" class="w-full bg-dark-300 border border-gray-600 rounded-md px-3 py-2 text-white focus:outline-none focus:border-neon-blue">
                <option value="gpt-3.5-turbo" <%= settings.defaultModel === 'gpt-3.5-turbo' ? 'selected' : '' %>>GPT-3.5 Turbo</option>
                <option value="gpt-4" <%= settings.defaultModel === 'gpt-4' ? 'selected' : '' %>>GPT-4</option>
                <option value="text-davinci-003" <%= settings.defaultModel === 'text-davinci-003' ? 'selected' : '' %>>Davinci</option>
              </select>
              <p class="text-gray-400 text-xs mt-1">Select the default AI model for content generation</p>
            </div>
            
            <div class="mb-4">
              <label for="maxTokens" class="block text-gray-300 mb-1">Maximum Tokens</label>
              <input type="number" id="maxTokens" name="maxTokens" value="<%= settings.maxTokens %>" min="100" max="4000" class="w-full bg-dark-300 border border-gray-600 rounded-md px-3 py-2 text-white focus:outline-none focus:border-neon-blue">
              <p class="text-gray-400 text-xs mt-1">Maximum number of tokens for generated content</p>
            </div>
          </div>
          
          <div>
            <h3 class="text-md font-semibold mb-4">Content Settings</h3>
            
            <div class="mb-4">
              <label for="defaultTone" class="block text-gray-300 mb-1">Default Tone</label>
              <select id="defaultTone" name="defaultTone" class="w-full bg-dark-300 border border-gray-600 rounded-md px-3 py-2 text-white focus:outline-none focus:border-neon-blue">
                <option value="professional" <%= settings.defaultTone === 'professional' ? 'selected' : '' %>>Professional</option>
                <option value="casual" <%= settings.defaultTone === 'casual' ? 'selected' : '' %>>Casual</option>
                <option value="friendly" <%= settings.defaultTone === 'friendly' ? 'selected' : '' %>>Friendly</option>
                <option value="formal" <%= settings.defaultTone === 'formal' ? 'selected' : '' %>>Formal</option>
                <option value="persuasive" <%= settings.defaultTone === 'persuasive' ? 'selected' : '' %>>Persuasive</option>
              </select>
              <p class="text-gray-400 text-xs mt-1">Default tone for generated content</p>
            </div>
            
            <div class="mb-4">
              <label for="defaultLength" class="block text-gray-300 mb-1">Default Length</label>
              <select id="defaultLength" name="defaultLength" class="w-full bg-dark-300 border border-gray-600 rounded-md px-3 py-2 text-white focus:outline-none focus:border-neon-blue">
                <option value="short" <%= settings.defaultLength === 'short' ? 'selected' : '' %>>Short (~150 words)</option>
                <option value="medium" <%= settings.defaultLength === 'medium' ? 'selected' : '' %>>Medium (~300 words)</option>
                <option value="long" <%= settings.defaultLength === 'long' ? 'selected' : '' %>>Long (~500 words)</option>
              </select>
              <p class="text-gray-400 text-xs mt-1">Default length for generated content</p>
            </div>
          </div>
        </div>
        
        <div class="mt-6">
          <h3 class="text-md font-semibold mb-4">Enabled Content Types</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="flex items-center">
              <input type="checkbox" id="enableWebsite" name="enabledContentTypes" value="website" <%= settings.enabledContentTypes.includes('website') ? 'checked' : '' %> class="mr-2">
              <label for="enableWebsite" class="text-gray-300">Website Content</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" id="enableBlog" name="enabledContentTypes" value="blog" <%= settings.enabledContentTypes.includes('blog') ? 'checked' : '' %> class="mr-2">
              <label for="enableBlog" class="text-gray-300">Blog Posts</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" id="enableSocial" name="enabledContentTypes" value="social" <%= settings.enabledContentTypes.includes('social') ? 'checked' : '' %> class="mr-2">
              <label for="enableSocial" class="text-gray-300">Social Media</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" id="enableEmail" name="enabledContentTypes" value="email" <%= settings.enabledContentTypes.includes('email') ? 'checked' : '' %> class="mr-2">
              <label for="enableEmail" class="text-gray-300">Email Content</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" id="enableProduct" name="enabledContentTypes" value="product" <%= settings.enabledContentTypes.includes('product') ? 'checked' : '' %> class="mr-2">
              <label for="enableProduct" class="text-gray-300">Product Descriptions</label>
            </div>
            <div class="flex items-center">
              <input type="checkbox" id="enableSEO" name="enabledContentTypes" value="seo" <%= settings.enabledContentTypes.includes('seo') ? 'checked' : '' %> class="mr-2">
              <label for="enableSEO" class="text-gray-300">SEO Content</label>
            </div>
          </div>
        </div>
        
        <div class="mt-8 border-t border-gray-700 pt-6 flex justify-end">
          <button type="reset" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 mr-3">Reset</button>
          <button type="submit" class="px-4 py-2 bg-neon-blue text-white rounded-md hover:bg-blue-600">Save Settings</button>
        </div>
      </form>
    </div>
  </div>
</div>
