<%
// Set default path if not provided
if (typeof path === 'undefined') {
  path = '/admin';
}
%>
<div class="w-64 bg-dark-200 border-r border-gray-800 min-h-screen hidden md:block">
  <div class="p-4 border-b border-gray-800">
    <a href="/" class="flex items-center">
      <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">FTRAISE AI</span>
    </a>
    <p class="text-gray-500 text-sm mt-1">Admin Panel</p>
  </div>

  <nav class="p-4">
    <ul class="space-y-2">
      <li>
        <a href="/admin" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-tachometer-alt w-5"></i>
          <span class="ml-3">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/admin/users" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/users' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-users w-5"></i>
          <span class="ml-3">User Management</span>
        </a>
      </li>
      <li>
        <a href="/admin/chats" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/chats' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-comments w-5"></i>
          <span class="ml-3">Chat Management</span>
        </a>
      </li>
      <li>
        <a href="/admin/guests" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/guests' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-user-secret w-5"></i>
          <span class="ml-3">Guest Management</span>
        </a>
      </li>
      <li>
        <a href="/admin/memories" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/memories' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-brain w-5"></i>
          <span class="ml-3">AI Memory</span>
        </a>
      </li>
      <li>
        <a href="/admin/reviews" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/reviews' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-star w-5"></i>
          <span class="ml-3">Reviews</span>
        </a>
      </li>
      <li>
        <a href="/admin/maintenance" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/maintenance' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
          <i class="fas fa-tools w-5"></i>
          <span class="ml-3">Maintenance</span>
        </a>
      </li>
    </ul>
  </nav>

  <div class="absolute bottom-0 w-64 p-4 border-t border-gray-800">
    <div class="flex items-center">
      <img src="<%= user.profilePicture %>" alt="<%= user.username %>" class="w-8 h-8 rounded-full mr-3">
      <div>
        <p class="text-sm font-medium text-white"><%= user.username %></p>
        <p class="text-xs text-gray-500">Administrator</p>
      </div>
    </div>
    <div class="mt-4 flex space-x-2">
      <a href="/profile" class="flex-1 py-2 px-3 bg-dark-100 text-white text-sm rounded-md hover:bg-dark-300 transition-colors text-center">
        Profile
      </a>
      <a href="/users/logout" class="flex-1 py-2 px-3 bg-dark-100 text-white text-sm rounded-md hover:bg-dark-300 transition-colors text-center">
        Logout
      </a>
    </div>
  </div>
</div>

<!-- Mobile Sidebar Toggle -->
<div class="md:hidden bg-dark-200 border-b border-gray-800 p-3 sticky top-0 z-20">
  <div class="flex justify-between items-center">
    <a href="/" class="flex items-center">
      <span class="text-base font-bold text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">FTRAISE AI</span>
    </a>

    <button id="mobile-menu-button" class="text-gray-400 hover:text-white focus:outline-none">
      <i class="fas fa-bars"></i>
    </button>
  </div>
</div>

<!-- Mobile Sidebar -->
<div id="mobile-sidebar" class="fixed inset-0 z-30 hidden">
  <div class="absolute inset-0 bg-black/50" id="sidebar-backdrop"></div>

  <div class="absolute top-0 left-0 w-64 bg-dark-200 h-full transform -translate-x-full transition-transform duration-300 ease-in-out" id="sidebar-content">
    <div class="p-4 border-b border-gray-800 flex justify-between items-center">
      <div>
        <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">FTRAISE AI</span>
        <p class="text-gray-500 text-sm">Admin Panel</p>
      </div>

      <button id="close-sidebar" class="text-gray-400 hover:text-white focus:outline-none">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <nav class="p-4">
      <ul class="space-y-2">
        <li>
          <a href="/admin" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-tachometer-alt w-5"></i>
            <span class="ml-3">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/admin/users" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/users' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-users w-5"></i>
            <span class="ml-3">User Management</span>
          </a>
        </li>
        <li>
          <a href="/admin/chats" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/chats' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-comments w-5"></i>
            <span class="ml-3">Chat Management</span>
          </a>
        </li>
        <li>
          <a href="/admin/guests" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/guests' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-user-secret w-5"></i>
            <span class="ml-3">Guest Management</span>
          </a>
        </li>
        <li>
          <a href="/admin/memories" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/memories' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-brain w-5"></i>
            <span class="ml-3">AI Memory</span>
          </a>
        </li>
        <li>
          <a href="/admin/reviews" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/reviews' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-star w-5"></i>
            <span class="ml-3">Reviews</span>
          </a>
        </li>
        <li>
          <a href="/admin/maintenance" class="flex items-center py-2 px-4 rounded-md <%= path === '/admin/maintenance' ? 'bg-dark-100 text-white' : 'text-gray-400 hover:bg-dark-100 hover:text-white' %> transition-colors">
            <i class="fas fa-tools w-5"></i>
            <span class="ml-3">Maintenance</span>
          </a>
        </li>
      </ul>
    </nav>

    <div class="absolute bottom-0 w-64 p-4 border-t border-gray-800">
      <div class="flex items-center">
        <img src="<%= user.profilePicture %>" alt="<%= user.username %>" class="w-8 h-8 rounded-full mr-3">
        <div>
          <p class="text-sm font-medium text-white"><%= user.username %></p>
          <p class="text-xs text-gray-500">Administrator</p>
        </div>
      </div>
      <div class="mt-4 flex space-x-2">
        <a href="/profile" class="flex-1 py-2 px-3 bg-dark-100 text-white text-sm rounded-md hover:bg-dark-300 transition-colors text-center">
          Profile
        </a>
        <a href="/users/logout" class="flex-1 py-2 px-3 bg-dark-100 text-white text-sm rounded-md hover:bg-dark-300 transition-colors text-center">
          Logout
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Mobile sidebar toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const sidebarContent = document.getElementById('sidebar-content');
  const closeSidebar = document.getElementById('close-sidebar');
  const sidebarBackdrop = document.getElementById('sidebar-backdrop');

  mobileMenuButton.addEventListener('click', () => {
    mobileSidebar.classList.remove('hidden');
    setTimeout(() => {
      sidebarContent.classList.remove('-translate-x-full');
    }, 10);
  });

  function hideSidebar() {
    sidebarContent.classList.add('-translate-x-full');
    setTimeout(() => {
      mobileSidebar.classList.add('hidden');
    }, 300);
  }

  closeSidebar.addEventListener('click', hideSidebar);
  sidebarBackdrop.addEventListener('click', hideSidebar);
</script>
