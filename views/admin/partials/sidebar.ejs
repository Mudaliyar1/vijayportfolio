<script>
  // Mobile sidebar toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const sidebarContent = document.getElementById('sidebar-content');
  const closeSidebar = document.getElementById('close-sidebar');
  const sidebarBackdrop = document.getElementById('sidebar-backdrop');

  mobileMenuButton.addEventListener('click', () => {
    mobileSidebar.classList.remove('hidden');
    setTimeout(() => {
      sidebarContent.classList.remove('-translate-x-full');
    }, 10);
  });

  function hideSidebar() {
    sidebarContent.classList.add('-translate-x-full');
    setTimeout(() => {
      mobileSidebar.classList.add('hidden');
    }, 300);
  }

  closeSidebar.addEventListener('click', hideSidebar);
  sidebarBackdrop.addEventListener('click', hideSidebar);

  // Load pending rate limit requests count
  async function loadPendingRequestsCount() {
    try {
      const response = await fetch('/admin/rate-limits?status=pending&count=true');
      const data = await response.json();

      if (data.success && data.count > 0) {
        // Update desktop badge
        const desktopBadge = document.getElementById('pending-requests-badge');
        desktopBadge.textContent = data.count;
        desktopBadge.classList.remove('hidden');

        // Update mobile badge
        const mobileBadge = document.getElementById('mobile-pending-requests-badge');
        mobileBadge.textContent = data.count;
        mobileBadge.classList.remove('hidden');
      }
    } catch (err) {
      console.error('Error loading pending requests count:', err);
    }
  }

  // Load pending requests count on page load
  loadPendingRequestsCount();
</script>
