<div class="container mx-auto px-4 py-8 bg-gray-900">
  <h1 class="text-3xl font-bold mb-8 text-white">Payment History</h1>

  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-purple-500 to-indigo-600 p-6 text-white">
      <h2 class="text-2xl font-bold">All Payments</h2>
      <p class="mt-1 opacity-90">View all payment transactions</p>
    </div>

    <div class="p-6">
      <% if (payments.length === 0) { %>
        <div class="text-center py-8">
          <svg class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-xl font-bold text-gray-700 mb-2">No Payments Found</h3>
          <p class="text-gray-600">No payment transactions have been recorded yet.</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white">
            <thead>
              <tr class="bg-gray-100 text-gray-700">
                <th class="py-3 px-4 text-left">Payment ID</th>
                <th class="py-3 px-4 text-left">User</th>
                <th class="py-3 px-4 text-left">Package</th>
                <th class="py-3 px-4 text-left">Amount</th>
                <th class="py-3 px-4 text-left">Status</th>
                <th class="py-3 px-4 text-left">Date</th>
                <th class="py-3 px-4 text-left">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% payments.forEach(payment => { %>
                <tr class="hover:bg-gray-50">
                  <td class="py-3 px-4 font-mono text-sm"><%= payment.razorpayPaymentId || 'N/A' %></td>
                  <td class="py-3 px-4"><%= payment.user.username %></td>
                  <td class="py-3 px-4"><%= payment.package.name %></td>
                  <td class="py-3 px-4">â‚¹<%= payment.amount %></td>
                  <td class="py-3 px-4">
                    <% if (payment.status === 'paid') { %>
                      <span class="inline-block px-2 py-1 text-xs rounded-full bg-green-200 text-green-800">
                        Paid
                      </span>
                    <% } else if (payment.status === 'created') { %>
                      <span class="inline-block px-2 py-1 text-xs rounded-full bg-yellow-200 text-yellow-800">
                        Pending
                      </span>
                    <% } else if (payment.status === 'failed') { %>
                      <span class="inline-block px-2 py-1 text-xs rounded-full bg-red-200 text-red-800">
                        Failed
                      </span>
                    <% } else if (payment.status === 'refunded') { %>
                      <span class="inline-block px-2 py-1 text-xs rounded-full bg-blue-200 text-blue-800">
                        Refunded
                      </span>
                    <% } %>
                  </td>
                  <td class="py-3 px-4"><%= new Date(payment.createdAt).toLocaleString() %></td>
                  <td class="py-3 px-4">
                    <a href="/admin/payments/<%= payment._id %>" class="text-blue-600 hover:text-blue-800">
                      View Details
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>
