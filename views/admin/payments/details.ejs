<div class="container mx-auto px-4 py-8 max-w-4xl bg-gray-900">
  <h1 class="text-3xl font-bold text-center mb-8 text-white">Payment Details</h1>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-purple-500 to-indigo-600 p-6 text-white">
      <h2 class="text-2xl font-bold">Transaction Information</h2>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Payment Details</h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Razorpay Order ID</span>
              <span class="font-mono text-sm"><%= payment.razorpayOrderId %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Razorpay Payment ID</span>
              <span class="font-mono text-sm"><%= payment.razorpayPaymentId || 'N/A' %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Amount</span>
              <span class="font-medium">₹<%= payment.amount %> <%= payment.currency %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Status</span>
              <% if (payment.status === 'paid') { %>
                <span class="inline-block px-2 py-1 text-xs rounded-full bg-green-200 text-green-800">
                  Paid
                </span>
              <% } else if (payment.status === 'created') { %>
                <span class="inline-block px-2 py-1 text-xs rounded-full bg-yellow-200 text-yellow-800">
                  Pending
                </span>
              <% } else if (payment.status === 'failed') { %>
                <span class="inline-block px-2 py-1 text-xs rounded-full bg-red-200 text-red-800">
                  Failed
                </span>
              <% } else if (payment.status === 'refunded') { %>
                <span class="inline-block px-2 py-1 text-xs rounded-full bg-blue-200 text-blue-800">
                  Refunded
                </span>
              <% } %>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Receipt</span>
              <span class="font-mono text-sm"><%= payment.receipt || 'N/A' %></span>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-700 mb-2">User & Package</h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="mb-3">
              <span class="block text-sm text-gray-500">User</span>
              <span class="font-medium"><%= payment.user.username %> (<%= payment.user.email %>)</span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Package</span>
              <span class="font-medium"><%= payment.package.name %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Package Price</span>
              <span class="font-medium">₹<%= payment.package.price %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Created At</span>
              <span class="font-medium"><%= new Date(payment.createdAt).toLocaleString() %></span>
            </div>
            <div class="mb-3">
              <span class="block text-sm text-gray-500">Updated At</span>
              <span class="font-medium"><%= new Date(payment.updatedAt).toLocaleString() %></span>
            </div>
          </div>
        </div>
      </div>

      <% if (payment.notes && Object.keys(payment.notes).length > 0) { %>
        <div class="mt-6">
          <h3 class="text-lg font-semibold text-gray-700 mb-2">Notes</h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <% for (const [key, value] of Object.entries(payment.notes)) { %>
              <div class="mb-2">
                <span class="font-medium"><%= key %>:</span> <%= value %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <a href="/admin/payments" class="text-blue-600 hover:text-blue-800">
      &larr; Back to Payments
    </a>
  </div>
</div>
