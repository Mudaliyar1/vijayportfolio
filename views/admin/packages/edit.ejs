<div class="flex flex-col md:flex-row">
  <div class="flex-grow p-6 max-w-full">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Edit Package: <%= package.name %></h1>
      <span class="text-sm text-gray-400">Welcome, <%= user.username %></span>
    </div>

    <div class="bg-dark-100 rounded-lg border border-gray-800 overflow-hidden mb-8 hover:border-neon-blue transition-colors">
      <div class="p-4 border-b border-gray-800">
        <h2 class="text-xl font-semibold">Package Details</h2>
      </div>

    <div class="p-6">
      <form action="/admin/packages/edit/<%= package._id %>" method="POST">
        <div class="mb-6">
          <label for="name" class="block text-white font-semibold mb-2">Package Name</label>
          <input type="text" id="name" name="name" required
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 value="<%= package.name %>">
          <p class="text-gray-400 text-sm mt-1">Package names must be unique. If you change this name, make sure it doesn't conflict with existing packages.</p>
        </div>

        <div class="mb-6">
          <label for="price" class="block text-white font-semibold mb-2">Price (â‚¹)</label>
          <input type="number" id="price" name="price" required min="0"
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 value="<%= package.price %>">
        </div>

        <div class="mb-6">
          <label for="description" class="block text-white font-semibold mb-2">Description</label>
          <textarea id="description" name="description" rows="3" required
                    class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"><%= package.description %></textarea>
        </div>

        <div class="mb-6">
          <label for="features" class="block text-white font-semibold mb-2">Features (comma-separated)</label>
          <textarea id="features" name="features" rows="3" required
                    class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"><%= package.features.join(', ') %></textarea>
          <p class="text-gray-400 text-sm mt-1">Enter features separated by commas</p>
        </div>

        <div class="mb-6">
          <label for="maxPages" class="block text-white font-semibold mb-2">Maximum Pages</label>
          <input type="number" id="maxPages" name="maxPages" required min="1" max="100"
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 value="<%= package.maxPages %>">
          <p class="text-xs text-gray-400 mt-1">Enter a number between 1 and 100. Users will be able to create up to this many pages.</p>
          <% if (package.maxPages > 10) { %>
            <div class="bg-yellow-900/30 border-l-4 border-yellow-500 text-yellow-300 p-3 mt-2 text-xs">
              <strong>Warning:</strong> If you reduce the number of pages, websites that already have more pages than the new limit will have their excess pages removed automatically.
            </div>
          <% } %>
        </div>

        <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowBlog" <%= package.allowBlog ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Blog</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowGallery" <%= package.allowGallery ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Gallery</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowContact" <%= package.allowContact ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Contact Form</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowTestimonials" <%= package.allowTestimonials ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Testimonials</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowEcommerce" <%= package.allowEcommerce ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow E-commerce</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowAiContent" <%= package.allowAiContent ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow AI Content</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowCustomLayout" <%= package.allowCustomLayout ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Custom Layout</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="isFree" <%= package.isFree ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Free Package</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="active" <%= package.active ? 'checked' : '' %> class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Active</span>
            </label>
          </div>
        </div>

        <div class="flex justify-between">
          <a href="/admin/packages" class="bg-dark-200 hover:bg-dark-300 text-white py-2 px-4 rounded-md transition-colors">
            <i class="fas fa-arrow-left mr-2"></i> Back to Packages
          </a>
          <button type="submit" class="bg-gradient-to-r from-neon-blue to-neon-purple text-white py-2 px-4 rounded-md flex items-center shadow-lg shadow-neon-blue/20 hover:shadow-neon-blue/40 transition-all duration-300">
            <i class="fas fa-save mr-2"></i> Update Package
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
