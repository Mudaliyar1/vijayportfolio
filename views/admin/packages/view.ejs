<div class="flex flex-col md:flex-row">
  <div class="flex-grow p-6 max-w-full">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">View Package: <%= package.name %></h1>
      <span class="text-sm text-gray-400">Welcome, <%= user.username %></span>
    </div>

    <div class="bg-dark-100 rounded-lg border border-gray-800 overflow-hidden mb-8 hover:border-neon-blue transition-colors">
      <div class="p-4 border-b border-gray-800">
        <h2 class="text-xl font-semibold">Package Details</h2>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-4">Basic Information</h3>

            <div class="mb-4">
              <span class="block text-sm text-gray-400 mb-1">Name</span>
              <span class="text-white"><%= package.name %></span>
            </div>

            <div class="mb-4">
              <span class="block text-sm text-gray-400 mb-1">Price</span>
              <span class="text-white">â‚¹<%= package.price %></span>
            </div>

            <div class="mb-4">
              <span class="block text-sm text-gray-400 mb-1">Max Pages</span>
              <span class="text-white"><%= package.maxPages %></span>
            </div>

            <div class="mb-4">
              <span class="block text-sm text-gray-400 mb-1">Status</span>
              <span class="inline-block px-2 py-1 text-xs rounded-full <%= package.active ? 'bg-neon-green/20 text-neon-green' : 'bg-red-500/20 text-red-400' %>">
                <%= package.active ? 'Active' : 'Inactive' %>
              </span>
            </div>

            <div class="mb-4">
              <span class="block text-sm text-gray-400 mb-1">Free Package</span>
              <span class="inline-block px-2 py-1 text-xs rounded-full <%= package.isFree ? 'bg-neon-green/20 text-neon-green' : 'bg-neon-blue/20 text-neon-blue' %>">
                <%= package.isFree ? 'Free' : 'Paid' %>
              </span>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Description</h3>
            <p class="text-gray-300 mb-6"><%= package.description %></p>

            <h3 class="text-lg font-semibold mb-4">Features</h3>
            <ul class="list-disc pl-5 text-gray-300 mb-6">
              <% package.features.forEach(feature => { %>
                <li><%= feature %></li>
              <% }); %>
            </ul>
          </div>
        </div>

        <div class="mt-8">
          <h3 class="text-lg font-semibold mb-4">Allowed Features</h3>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowBlog ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowBlog ? 'text-white' : 'text-gray-500' %>">Blog</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowGallery ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowGallery ? 'text-white' : 'text-gray-500' %>">Gallery</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowContact ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowContact ? 'text-white' : 'text-gray-500' %>">Contact Form</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowTestimonials ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowTestimonials ? 'text-white' : 'text-gray-500' %>">Testimonials</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowEcommerce ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowEcommerce ? 'text-white' : 'text-gray-500' %>">E-commerce</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowAiContent ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowAiContent ? 'text-white' : 'text-gray-500' %>">AI Content</span>
            </div>

            <div class="flex items-center">
              <div class="w-4 h-4 rounded-full <%= package.allowCustomLayout ? 'bg-neon-green' : 'bg-gray-600' %> mr-2"></div>
              <span class="<%= package.allowCustomLayout ? 'text-white' : 'text-gray-500' %>">Custom Layout</span>
            </div>
          </div>
        </div>

        <div class="flex justify-between mt-8">
          <a href="/admin/packages" class="bg-dark-200 hover:bg-dark-300 text-white py-2 px-4 rounded-md transition-colors">
            Back to Packages
          </a>
          <div class="flex gap-2">
            <a href="/admin/packages/edit/<%= package._id %>" class="bg-neon-blue/20 text-neon-blue hover:bg-neon-blue/30 py-2 px-4 rounded-md transition-colors">
              <i class="fas fa-edit mr-2"></i> Edit Package
            </a>
            <form action="/admin/packages/<%= package._id %>/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this package? This action cannot be undone.');">
              <button type="submit" class="bg-red-500/20 text-red-400 hover:bg-red-500/30 py-2 px-4 rounded-md transition-colors">
                <i class="fas fa-trash-alt mr-2"></i> Delete Package
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
