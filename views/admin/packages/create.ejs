<div class="flex flex-col md:flex-row">
  <div class="flex-grow p-6 max-w-full">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Create New Package</h1>
      <span class="text-sm text-gray-400">Welcome, <%= user.username %></span>
    </div>

    <div class="bg-dark-100 rounded-lg border border-gray-800 overflow-hidden mb-8 hover:border-neon-blue transition-colors">
      <div class="p-4 border-b border-gray-800">
        <h2 class="text-xl font-semibold">Package Details</h2>
      </div>

    <div class="p-6">
      <form action="/admin/packages/create" method="POST">
        <div class="mb-6">
          <label for="name" class="block text-white font-semibold mb-2">Package Name</label>
          <input type="text" id="name" name="name" required
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 placeholder="e.g. Basic, Pro, Premium">
          <p class="text-gray-400 text-sm mt-1">Package names must be unique. Names like 'Free', 'Basic', 'Pro', 'Premium' may already exist.</p>
        </div>

        <div class="mb-6">
          <label for="price" class="block text-white font-semibold mb-2">Price (â‚¹)</label>
          <input type="number" id="price" name="price" required min="0"
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 placeholder="e.g. 500">
        </div>

        <div class="mb-6">
          <label for="description" class="block text-white font-semibold mb-2">Description</label>
          <textarea id="description" name="description" rows="3" required
                    class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                    placeholder="Brief description of the package"></textarea>
        </div>

        <div class="mb-6">
          <label for="features" class="block text-white font-semibold mb-2">Features (comma-separated)</label>
          <textarea id="features" name="features" rows="3" required
                    class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                    placeholder="e.g. Responsive design, SEO optimization, Custom domain"></textarea>
          <p class="text-gray-400 text-sm mt-1">Enter features separated by commas</p>
        </div>

        <div class="mb-6">
          <label for="maxPages" class="block text-white font-semibold mb-2">Maximum Pages</label>
          <input type="number" id="maxPages" name="maxPages" required min="1" max="100"
                 class="w-full px-4 py-2 bg-dark-200 border border-gray-700 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-1 focus:ring-neon-blue/50 text-white"
                 placeholder="e.g. 10, 20, 50, 100">
          <p class="text-xs text-gray-400 mt-1">Enter a number between 1 and 100. Users will be able to create up to this many pages.</p>
        </div>

        <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowBlog" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Blog</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowGallery" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Gallery</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowContact" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Contact Form</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowTestimonials" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Testimonials</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowEcommerce" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow E-commerce</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowAiContent" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow AI Content</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="allowCustomLayout" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Allow Custom Layout</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="isFree" class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Free Package</span>
            </label>
          </div>

          <div>
            <label class="flex items-center">
              <input type="checkbox" name="active" checked class="h-5 w-5 bg-dark-200 border-gray-700 text-neon-blue rounded focus:ring-neon-blue/50">
              <span class="ml-2 text-white">Active</span>
            </label>
          </div>
        </div>

        <div class="flex justify-between">
          <a href="/admin/packages" class="bg-dark-200 hover:bg-dark-300 text-white py-2 px-4 rounded-md transition-colors">
            <i class="fas fa-arrow-left mr-2"></i> Back to Packages
          </a>
          <button type="submit" class="bg-gradient-to-r from-neon-blue to-neon-purple text-white py-2 px-4 rounded-md flex items-center shadow-lg shadow-neon-blue/20 hover:shadow-neon-blue/40 transition-all duration-300">
            <i class="fas fa-save mr-2"></i> Create Package
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
