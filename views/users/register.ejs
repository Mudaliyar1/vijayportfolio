<div class="bg-dark-100 rounded-lg border border-gray-800 p-8 shadow-lg backdrop-blur-sm relative overflow-hidden">
  <div class="absolute -top-10 -right-10 w-40 h-40 bg-neon-blue/20 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-neon-purple/20 rounded-full blur-3xl"></div>
  
  <h2 class="text-2xl font-bold mb-6 text-center">Create an Account</h2>
  
  <form action="/users/register" method="POST">
    <div class="mb-4">
      <label for="username" class="block text-gray-300 mb-2">Username</label>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
          <i class="fas fa-user"></i>
        </span>
        <input
          type="text"
          id="username"
          name="username"
          class="w-full bg-dark-200 border border-gray-700 rounded-md py-3 pl-10 pr-3 text-white focus:outline-none focus:border-neon-blue transition-colors"
          placeholder="Choose a username"
          value="<%= typeof username != 'undefined' ? username : '' %>"
          required
        />
      </div>
    </div>
    
    <div class="mb-4">
      <label for="email" class="block text-gray-300 mb-2">Email</label>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
          <i class="fas fa-envelope"></i>
        </span>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full bg-dark-200 border border-gray-700 rounded-md py-3 pl-10 pr-3 text-white focus:outline-none focus:border-neon-blue transition-colors"
          placeholder="Enter your email"
          value="<%= typeof email != 'undefined' ? email : '' %>"
          required
        />
      </div>
    </div>
    
    <div class="mb-4">
      <label for="password" class="block text-gray-300 mb-2">Password</label>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
          <i class="fas fa-lock"></i>
        </span>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full bg-dark-200 border border-gray-700 rounded-md py-3 pl-10 pr-3 text-white focus:outline-none focus:border-neon-blue transition-colors"
          placeholder="Create a password (min. 6 characters)"
          required
        />
      </div>
    </div>
    
    <div class="mb-6">
      <label for="password2" class="block text-gray-300 mb-2">Confirm Password</label>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
          <i class="fas fa-lock"></i>
        </span>
        <input
          type="password"
          id="password2"
          name="password2"
          class="w-full bg-dark-200 border border-gray-700 rounded-md py-3 pl-10 pr-3 text-white focus:outline-none focus:border-neon-blue transition-colors"
          placeholder="Confirm your password"
          required
        />
      </div>
    </div>
    
    <button
      type="submit"
      class="w-full bg-gradient-to-r from-neon-blue to-neon-purple text-white py-3 rounded-md font-medium hover:opacity-90 transition-opacity"
    >
      Register
    </button>
  </form>
  
  <div class="mt-6 text-center text-gray-400">
    Already have an account? 
    <a href="/users/login" class="text-neon-blue hover:underline">Login here</a>
  </div>
</div>
