<!-- Report Issue Page -->
<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-neon-blue to-neon-purple">
      Report an Issue
    </h1>
    <p class="text-gray-400">Submit a bug report, feature request, or feedback to our team</p>
  </div>
  
  <div class="bg-dark-200 rounded-lg border border-gray-700 shadow-xl overflow-hidden mb-8">
    <div class="p-6">
      <form action="/issues/submit" method="POST">
        <div class="mb-6">
          <label for="title" class="block text-sm font-medium text-gray-400 mb-1">Issue Title</label>
          <input type="text" id="title" name="title" required class="w-full bg-dark-100 border border-gray-700 rounded-md px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-neon-blue" placeholder="Brief description of the issue">
          <p class="text-xs text-gray-500 mt-1">Keep it short and descriptive (max 100 characters)</p>
        </div>
        
        <div class="mb-6">
          <label for="category" class="block text-sm font-medium text-gray-400 mb-1">Category</label>
          <select id="category" name="category" required class="w-full bg-dark-100 border border-gray-700 rounded-md px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-neon-blue">
            <option value="" disabled selected>Select a category</option>
            <option value="Bug">Bug Report</option>
            <option value="Feature Request">Feature Request</option>
            <option value="Feedback">General Feedback</option>
            <option value="Other">Other</option>
          </select>
        </div>
        
        <div class="mb-6">
          <label for="description" class="block text-sm font-medium text-gray-400 mb-1">Issue Description</label>
          <textarea id="description" name="description" rows="8" required class="w-full bg-dark-100 border border-gray-700 rounded-md px-3 py-2 text-white focus:outline-none focus:ring-2 focus:ring-neon-blue" placeholder="Please provide detailed information about the issue..."></textarea>
          <div class="text-xs text-gray-500 mt-1">
            <p>Please include:</p>
            <ul class="list-disc pl-5 mt-1 space-y-1">
              <li>Steps to reproduce (for bugs)</li>
              <li>Expected vs. actual behavior</li>
              <li>Screenshots or error messages (if applicable)</li>
              <li>Any other relevant details</li>
            </ul>
          </div>
        </div>
        
        <div class="flex justify-between items-center">
          <a href="/issues" class="text-neon-blue hover:underline">
            <i class="fas fa-arrow-left mr-1"></i> Back to My Issues
          </a>
          <button type="submit" class="px-6 py-2 bg-neon-blue text-white rounded-md hover:bg-blue-600 transition-colors">
            Submit Issue
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <div class="bg-dark-200 rounded-lg border border-gray-700 shadow-xl overflow-hidden">
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">What happens next?</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-dark-100 p-4 rounded-lg border border-gray-700">
          <div class="text-neon-blue text-2xl mb-2">
            <i class="fas fa-ticket-alt"></i>
          </div>
          <h3 class="text-lg font-medium text-white mb-2">Issue Tracking</h3>
          <p class="text-gray-400 text-sm">You'll receive a unique Token ID to track your issue's status.</p>
        </div>
        
        <div class="bg-dark-100 p-4 rounded-lg border border-gray-700">
          <div class="text-neon-blue text-2xl mb-2">
            <i class="fas fa-search"></i>
          </div>
          <h3 class="text-lg font-medium text-white mb-2">Review Process</h3>
          <p class="text-gray-400 text-sm">Our team will review your issue and may contact you for more information.</p>
        </div>
        
        <div class="bg-dark-100 p-4 rounded-lg border border-gray-700">
          <div class="text-neon-blue text-2xl mb-2">
            <i class="fas fa-check-circle"></i>
          </div>
          <h3 class="text-lg font-medium text-white mb-2">Resolution</h3>
          <p class="text-gray-400 text-sm">You can check the status of your issue at any time in the "My Issues" section.</p>
        </div>
      </div>
    </div>
  </div>
</div>
