      if (canvas && elements.length > 0) {
        // Find the element with the greatest bottom position
        let maxBottom = 0;

        elements.forEach(element => {
          const rect = element.getBoundingClientRect();
          const bottom = element.offsetTop + element.offsetHeight;

          if (bottom > maxBottom) {
            maxBottom = bottom;
          }
        });

