        } else {
          // Show error message
          alert('Failed to save website: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error saving website:', error);
        alert('An error occurred while saving the website');
      })
      .finally(() => {
        // Reset button state
        this.innerHTML = originalText;
        this.disabled = false;
      });
