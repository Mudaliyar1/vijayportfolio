<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add event listener to the manage cookies button
    document.getElementById('manageCookiesBtn').addEventListener('click', function() {
      // Check if cookieConsent is available
      if (window.cookieConsent && typeof window.cookieConsent.showBanner === 'function') {
        window.cookieConsent.showBanner();
      } else {
        alert('Cookie management is not available at this time. Please try again later.');
      }
    });

    // Add event listener to the reset cookies button
    document.getElementById('resetCookiesBtn').addEventListener('click', function() {
      if (window.cookieConsent && typeof window.cookieConsent.clearConsent === 'function') {
        window.cookieConsent.clearConsent();
        alert('Your cookie consent data has been cleared. The cookie consent banner will appear on your next page visit.');
      } else {
        alert('Cookie management is not available at this time. Please try again later.');
      }
    });
  });
</script>

