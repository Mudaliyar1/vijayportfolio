<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Hero Section -->
  <div class="text-center mb-8">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
      Platform Analytics
    </h1>
    <p class="text-xl text-gray-300 mt-4 max-w-3xl mx-auto">
      Real-time insights into FTRAISE AI platform usage, user growth, and AI interactions.
    </p>
  </div>
  
  <!-- Analytics Overview -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8 w-full">
    <div class="bg-dark-100/60 backdrop-blur-sm p-4 rounded-lg border border-neon-blue/30 text-center">
      <div class="text-3xl font-bold text-neon-blue mb-1 counter" data-target="1250">0</div>
      <div class="text-sm text-gray-400">Active Users</div>
    </div>
    <div class="bg-dark-100/60 backdrop-blur-sm p-4 rounded-lg border border-neon-purple/30 text-center">
      <div class="text-3xl font-bold text-neon-purple mb-1 counter" data-target="8500">0</div>
      <div class="text-sm text-gray-400">Total Conversations</div>
    </div>
    <div class="bg-dark-100/60 backdrop-blur-sm p-4 rounded-lg border border-neon-pink/30 text-center">
      <div class="text-3xl font-bold text-neon-pink mb-1 counter" data-target="3200">0</div>
      <div class="text-sm text-gray-400">Images Generated</div>
    </div>
    <div class="bg-dark-100/60 backdrop-blur-sm p-4 rounded-lg border border-neon-green/30 text-center">
      <div class="text-3xl font-bold text-neon-green mb-1 counter" data-target="98">0</div>
      <div class="text-sm text-gray-400">Uptime %</div>
    </div>
  </div>
  
  <!-- Time Period Filter -->
  <div class="flex justify-end mb-6">
    <div class="flex space-x-3 bg-dark-100/60 backdrop-blur-sm p-2 rounded-lg border border-gray-800">
      <button class="text-sm px-3 py-1 bg-neon-blue/20 text-neon-blue rounded-full hover:bg-neon-blue/30 transition-colors time-filter active" data-time="day">24h</button>
      <button class="text-sm px-3 py-1 bg-dark-200 text-gray-300 rounded-full hover:bg-dark-300 transition-colors time-filter" data-time="week">7d</button>
      <button class="text-sm px-3 py-1 bg-dark-200 text-gray-300 rounded-full hover:bg-dark-300 transition-colors time-filter" data-time="month">30d</button>
      <button class="text-sm px-3 py-1 bg-dark-200 text-gray-300 rounded-full hover:bg-dark-300 transition-colors time-filter" data-time="year">1y</button>
    </div>
  </div>
  
  <!-- Main Analytics Graphs -->
  <div class="grid grid-cols-1 gap-8 mb-8">
    <!-- User Growth Graph -->
    <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold">User Growth</h3>
        <div class="flex items-center">
          <span class="text-neon-blue mr-2">+12.5%</span>
          <i class="fas fa-arrow-up text-neon-blue"></i>
        </div>
      </div>
      <div class="h-80 w-full" id="user-growth-chart"></div>
    </div>
    
    <!-- AI Interactions Graph -->
    <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold">AI Interactions</h3>
        <div class="flex items-center">
          <span class="text-neon-purple mr-2">+24.8%</span>
          <i class="fas fa-arrow-up text-neon-purple"></i>
        </div>
      </div>
      <div class="h-80 w-full" id="ai-interactions-chart"></div>
    </div>
  </div>
  
  <!-- Secondary Analytics -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <!-- Language Distribution -->
    <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold">Language Distribution</h3>
      </div>
      <div class="h-64 w-full" id="language-distribution-chart"></div>
    </div>
    
    <!-- Image Generation Types -->
    <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold">Image Generation Types</h3>
      </div>
      <div class="h-64 w-full" id="image-types-chart"></div>
    </div>
  </div>
  
  <!-- Hourly Activity Heatmap -->
  <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800 mb-8">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold">Hourly Activity Heatmap</h3>
    </div>
    <div class="h-64 w-full" id="activity-heatmap-chart"></div>
  </div>
  
  <!-- User Satisfaction Metrics -->
  <div class="bg-dark-100/60 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold">User Satisfaction Metrics</h3>
      <div class="flex items-center">
        <span class="text-neon-green mr-2">+3.2%</span>
        <i class="fas fa-arrow-up text-neon-green"></i>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-dark-200/70 p-4 rounded-lg text-center">
        <div class="text-4xl font-bold text-neon-green mb-2">98%</div>
        <div class="text-sm text-gray-400">Overall Satisfaction</div>
      </div>
      <div class="bg-dark-200/70 p-4 rounded-lg text-center">
        <div class="text-4xl font-bold text-neon-blue mb-2">4.8</div>
        <div class="text-sm text-gray-400">Average Rating</div>
      </div>
      <div class="bg-dark-200/70 p-4 rounded-lg text-center">
        <div class="text-4xl font-bold text-neon-purple mb-2">92%</div>
        <div class="text-sm text-gray-400">Would Recommend</div>
      </div>
    </div>
  </div>
</div>

<!-- Analytics JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="/js/analytics.js"></script>
