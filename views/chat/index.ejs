      <div class="flex items-center">
        <button id="show-history" class="mr-3 text-gray-400 hover:text-white">
          <i class="fas fa-history"></i>
        </button>
        <h1 class="text-xl font-semibold">FTRAISE AI Chat</h1>
      </div>

